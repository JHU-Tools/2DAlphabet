{
    "NAME": "CR_append",
    "GLOBAL": {
        "FILE": "THselection_$process.root",
        "FILE_UP": "THselection_$process_$syst_up.root",
        "FILE_DOWN": "THselection_$process_$syst_down.root",
        "HIST": "MthvMh_particleNet_$region__nominal",
        "HIST_UP": "MthvMh_particleNet_$region__$syst_up",
        "HIST_DOWN": "MthvMh_particleNet_$region__$syst_down",
        "path": "data"
    },
    "PROCESSES": {
        "data_obs": {
            "SYSTEMATICS":[],
            "SCALE": 1.0,
            "COLOR": "black",
            "TYPE": "DATA",
            "ALIAS":"Data_16",
            "TITLE": "Data",
            "LOC": "path/FILE:HIST"
	    },
        "ttbar_16": {
            "SYSTEMATICS":["lumi","TT_xsec","TptReweight"],
            "SCALE": 1.0,
            "COLOR": "red",
            "TYPE": "BKG",
            "LOC": "path/FILE:HIST"
        },
        "TprimeB-1800_16": {
            "SYSTEMATICS":["lumi","JES"],
            "SCALE": 1.0,
            "COLOR": "violet",
            "TYPE": "SIGNAL",
            "LOC": "path/FILE:HIST"
        }
    },

    "REGIONS": {
        "CR_pass": {
            "PROCESSES": ["TprimeB-1800_16"],
            "BINNING": "default"
        },
        "CR_fail": {
            "PROCESSES": ["ttbar_16"],
            "BINNING": "default"
        }
    },

    "SYSTEMATICS": {
        "lumi": {
            "VAL": 1.018
        },
        "TT_xsec": {
            "VALUP": 1.20,
            "VALDOWN": 0.8
        },
        "TptReweight":{
            "UP": "path/FILE:HIST_UP",
            "DOWN": "path/FILE:HIST_DOWN",
            "SIGMA": 1.0
        },
        "JES": {
            "ALIAS": "JES",
            "UP": "path/FILE_UP:HIST",
            "DOWN": "path/FILE_DOWN:HIST",
            "SIGMA": 1.0
        }
    },

    "BINNING": {
        "HELP": "The binning of the x and y axes should be configured here",
        "default": {
            "X": {
                "NAME": "xaxis",
                "TITLE": "X",
                "MIN": 60,
                "MAX": 260,
                "NBINS": 10,
                "SIGSTART": 100,
                "SIGEND": 140
            },
            "Y": {
                "NAME": "yaxis",
                "TITLE": "Y",
                "MIN": 800, 
                "MAX": 3000,
                "NBINS": 22
            }
        }
    },
    "OPTIONS": {
        "blindedPlots": [],
        "blindedFit": [],
        "haddSignals": true,
        "plotPrefitSigInFitB": true,
        "plotTitles":false,
	    "plotTemplateComparisons": false,
        "plotEvtsPerUnit": true,
        "year": 16
    }
}